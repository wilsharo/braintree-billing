<md-content layout="column">
	<form name="form" action="/subscribe?userid=<%= data.userid %>&username=<%= data.username %>" method="post" style="max-width: 300px;">
		<div class="logo">
			<a href="https://urltv-mcbattlearena.firebaseapp.com/home/one"><img src="https://firebasestorage.googleapis.com/v0/b/urltv-mcbattlearena.appspot.com/o/urltv_web_images%2Furl_log_transparent.png?alt=media&token=d4aa5a7d-b98c-429b-bbec-6a06ecd209ff"
				 alt="logo"></a>
		</div>
		<div style="padding-top:50px;">
			<span><font color="white">Subscribe Today</font></span>
		</div>

		<div layout="row">
			<p><font color="white">Choose a plan below to get started.</font></p>
		</div>

		<div layout="row">
			<p>
				<font color="white">Your credit card information will not interact with our servers.</font>
			</p>
		</div>

		<div layout="row">
			<div>
				<a href="https://www.braintreegateway.com/merchants/YOUR_MERCHANT_ID/verified" target="_blank">
					<img src="https://s3.amazonaws.com/braintree-badges/braintree-badge-wide-dark.png" width="100%" border="0" />
				</a>
			</div>
		</div>

		<div layout="row" style="padding-top:10px;">
			<select name="plan">
				<% data.plans.forEach(function(plan) { %>
				<option value="<%= plan.id%>">
					$
					<%= plan.name%>
				</option>
				<% }); %>
			</select>
		</div>

		<div id="dropin" style="padding-top:10px;">
		</div>

		<div layout="row" style="padding-top:10px;">
			<button type="submit">Subscribe</button>
		</div>

	</form>
</md-content>

<% if (data.token) { %>
<script>
	var token = "<%= data.token %>";
</script>
<% } %>